{
  "compilerOptions": {
    "module": "commonjs",                  // Node-friendly module system
    "declaration": true,                   // Generate .d.ts for TypeScript consumers
    "removeComments": true,
    "emitDecoratorMetadata": true,         // Required for NestJS decorators
    "experimentalDecorators": true,        // Required for NestJS decorators
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",                    // Library target
    "sourceMap": true,                      // Optional: for debugging
    "outDir": "./dist",                    // Output directory
    "rootDir": "./src",                    // Important for library build
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,                        // Enable all strict checks
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
